<script>
    let puan = parseFloat(localStorage.getItem('puan')) || 0;
    const codes = ["824D4XRBAL1KVE8E", "60PFND9DTF3RMVRT", "HMKATSPEDF9AY7TG", "4S9K67LDWU5U35EC", "7P4TW3KP6LPRTBGS", "B6HUMPWU5BZA76YC"];

    function updateDisplay() {
        if (puan > 1000000000000) {
            document.getElementById('puan-text').innerText = "GOD MODE";
        } else {
            document.getElementById('puan-text').innerText = puan.toLocaleString(undefined, {minimumFractionDigits: 2});
        }
        localStorage.setItem('puan', puan);
    }

    function promoKullan() {
        const val = document.getElementById('promo-input').value.trim();
        const msg = document.getElementById('msg');
        if (localStorage.getItem('u_'+val)) { msg.innerText="Already used!"; return; }

        if (val === "onwxosn108c3real_prooktalsh") {
            puan += 9999999999999999999999999;
            localStorage.setItem('u_'+val, "1");
            msg.innerText = "GOD MODE ENABLED!";
            updateDisplay();
        } else if (val === "3MVisitor109") {
            puan += 10; successPromo(val);
        } else {
            msg.innerText = "Invalid Code!";
        }
        document.getElementById('promo-input').value = "";
    }

    function successPromo(v) {
        localStorage.setItem('u_'+v, "1");
        updateDisplay();
        document.getElementById('msg').innerText = "Points Added!";
    }

    function puanKazan(url, miktar, btnId) {
        const last = localStorage.getItem('last_' + btnId);
        const now = new Date().getTime();
        if (last && (now - last) < 86400000) {
            document.getElementById('msg').innerText = "Wait 24h for this site!";
            return;
        }
        puan += miktar;
        localStorage.setItem('last_' + btnId, now);
        updateDisplay();
        window.open(url, '_blank');
    }

    function kodAl(maliyet, miktar) {
        if (puan >= maliyet) {
            puan -= maliyet;
            updateDisplay();
            let res = [];
            for(let i=0; i<miktar; i++) res.push("Code "+(i+1)+": "+codes[Math.floor(Math.random()*codes.length)]);
            document.getElementById('code-box').innerHTML = res.join("<br>");
            document.getElementById('code-box').style.display = "block";
            document.getElementById('msg').innerText = "Success!";
        } else {
            document.getElementById('msg').innerText = "Need more points!";
        }
    }

    function sayfaDegistir(pId) {
        document.querySelectorAll('.page').forEach(p => p.classList.remove('active-page'));
        document.getElementById(pId).classList.add('active-page');
        document.getElementById('msg').innerText = "";
    }

    function filterButtons() {
        let input = document.getElementById('searchInput').value.toLowerCase();
        let items = document.getElementsByClassName('mission-item');
        for (let i = 0; i < items.length; i++) {
            items[i].style.display = items[i].innerText.toLowerCase().includes(input) ? "flex" : "none";
        }
    }

    updateDisplay();
</script>
